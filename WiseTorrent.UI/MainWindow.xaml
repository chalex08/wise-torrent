<Window x:Class="WiseTorrent.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:blazor="clr-namespace:Microsoft.AspNetCore.Components.WebView.Wpf;assembly=Microsoft.AspNetCore.Components.WebView.Wpf"
        xmlns:components="clr-namespace:WiseTorrent.UI.Components"
		Icon="/Assets/WTGICON.ico"
        Title="WiseTorrent" Height="600" Width="900">
	<Grid>
		<blazor:BlazorWebView x:Name="BlazorHost" HostPage="wwwroot/index.html">
			<blazor:BlazorWebView.RootComponents>
				<blazor:RootComponent Selector="#app" ComponentType="{x:Type components:App}" />
			</blazor:BlazorWebView.RootComponents>
		</blazor:BlazorWebView>
	</Grid>
</Window>